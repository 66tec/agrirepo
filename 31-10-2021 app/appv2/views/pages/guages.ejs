    <script type="text/javascript" src="srcguages/gauge.js"> </script>
    <script>

      var pad = function(tar) {}

      var gauge0 = Gauge(document.getElementById("gauge0"),
     
        {
          min: -100,
          max: 100,
          dialStartAngle: 180,
          dialEndAngle: 0,
          value: 50,
          viewBox: "0 0 100 57",
          color: function(value) {
            if(value < 20) {
              return "#5ee432";
            }else if(value < 40) {
              return "#fffa50";
            }else if(value < 60) {
              return "#f7aa38";
            }else {
              return "#ef4655";
            }
          }
        }
      );

      var gauge1 = Gauge(
        document.getElementById("gauge1"),
        {
          max: 100,
          value: 50
        }
        
      );

      var gauge2 = Gauge(
        document.getElementById("gauge2"),
        {
      max: 100,
      dialStartAngle: 180,
      dialEndAngle: -90,
      viewBox: "0 0 57 57",
      value: 50
    }
      );

      var gauge3 = Gauge(
        document.getElementById("gauge3"),
        {
      max: 200,
      dialStartAngle: 0,
      dialEndAngle: -180,
      viewBox: "0 35 100 100",
      value: 50
    }
      );

      var gauge4 = Gauge(
        document.getElementById("gauge4"),
        {
          min: -100,
          max: 100,
          dialStartAngle: 180,
          dialEndAngle: 0,
          value: 50,
          viewBox: "0 0 100 57",
          color: function(value) {
            if(value < 20) {
              return "#5ee432";
            }else if(value < 40) {
              return "#fffa50";
            }else if(value < 60) {
              return "#f7aa38";
