      <center>
      <div class="row">
          <div class="col-lg-2">

          </div>
          <div class="col-lg-6">
              <h2> New Component</h2>
              <form role="form" method="POST" action="createcomponent" >
              <div class="form-group">

                <label for="">Farm Name</label>
                <select class="form-control" name="farm_name" id="">
                  <% stream.forEach(function(item) { %>
                  <option><%= item.farm_name%></option>
                  <% }); %>

                </select>

                <label for="">Zone Name</label>
                <select class="form-control" name="zone_name" id="">
                  <% stream2.forEach(function(item) { %>
                  <option><%= item.zone_name%></option>
                  <% }); %>

                </select>
                  
                <label for="">Component Name</label>
                <input type="text"
                  class="form-control" required name="component_name" id="Component_name" aria-describedby="helpId" placeholder="">
                <small id="helpId" class="form-text text-muted">insert your component name here</small>

                <label for="">Component Display Name</label>
                <input type="text"
                  class="form-control" required name="component_disp_name" id="component_disp_name" aria-describedby="helpId" placeholder="">
                <small id="helpId" class="form-text text-muted"></small>

                <label for="">Component Master Type</label>
                <!-- <input type="text" class="form-control" name="component_master_type" id="component_master_type" aria-describedby="helpId" placeholder=""> -->
                  <select class="form-control" name="component_master_type" id="component_master_type" aria-describedby="helpId" placeholder="">
                    <option  value="Actuator">Actuator</option>
                    <option value="Sensor">Sensor</option>
                  </select>
                <small id="helpId" class="form-text text-muted">Help text</small>

                <label for="">Component Type</label>
                <!-- <input type="text" class="form-control" name="component_type" id="component_type" aria-describedby="helpId" placeholder=""> -->
                <select class="form-control" name="component_type" id="component_type" aria-describedby="helpId" placeholder="">
                    
                    <option value="Soil Moisture">Soil Moisture</option>
                      <option value="Pump">Pump</option>
                      <option value="Fan">Fan</option>
                      <option value="Leds">Leds</option>
                      <option value="Light Intensity">Light Intensity</option>
                      <option value="Humidity">Humidity</option>
                      <option value="Temperature">Temperature</option>

                </select>
                  <small id="helpId" class="form-text text-muted">Help text</small>
                <br>
                <button href="createcomponent" class="btn btn-primary" role="button">Create</button>                
              </div>
            </form>
            
          </div> 

